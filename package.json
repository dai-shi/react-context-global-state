{
  "name": "react-context-global-state",
  "description": "Simple global state for React by Context API",
  "version": "2.1.1",
  "author": "Daishi Kato",
  "repository": {
    "type": "git",
    "url": "https://github.com/dai-shi/react-context-global-state.git"
  },
  "main": "./dist/index.js",
  "module": "./src/index.js",
  "types": "./src/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "compile": "babel src -d dist",
    "test": "npm run eslint && npm run tslint && npm run tsc-test && npm run jest",
    "eslint": "eslint --ignore-pattern dist .",
    "jest": "jest",
    "tslint": "tslint --project .",
    "tsc-test": "tsc --project . --noEmit",
    "examples:minimal": "DIR=01_minimal EXT=js webpack-dev-server",
    "examples:typescript": "DIR=02_typescript webpack-dev-server",
    "examples:actions": "DIR=03_actions webpack-dev-server",
    "examples:fetch": "DIR=04_fetch webpack-dev-server",
    "examples:onmount": "DIR=05_onmount webpack-dev-server"
  },
  "keywords": [
    "react",
    "state",
    "context",
    "stateless",
    "thisless",
    "pure"
  ],
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@types/react": "^16.7.6",
    "@types/react-dom": "^16.0.9",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.7.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "react": "^16.7.0-alpha.2",
    "react-compose-onmount": "^1.1.0",
    "react-compose-state": "^1.5.0",
    "react-dom": "^16.7.0-alpha.2",
    "ts-loader": "^5.2.2",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "typescript": "^3.1.6",
    "webpack": "^4.21.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9"
  },
  "peerDependencies": {
    "react": ">=16.3.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb"
    ],
    "rules": {
      "import/prefer-default-export": 0,
      "react/jsx-filename-extension": [
        2,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "import/no-extraneous-dependencies": [
        2,
        {
          "devDependencies": true
        }
      ],
      "import/no-unresolved": [
        2,
        {
          "ignore": [
            "react-context-global-state"
          ]
        }
      ],
      "react/prop-types": 0
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  }
}
